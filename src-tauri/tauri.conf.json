{
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "phi-recorder",
    "version": "0.2.26"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "scope": [ "https://api.github.com/repos/2278535805/Phi-Recorder/releases/latest" ],
        "request": true
      },
      "dialog": {
        "message": true,
        "open": true
      },
      "fs": {
        "readFile": true,
        "scope": ["$RESOURCE/*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": {
          "allow": ["**"],
          "requireLiteralLeadingDot": false
        }
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.hlmc.phi.recorder",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "assets",
        "WebView2Loader.dll",
        "config.yml"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost https://api.github.com; style-src 'self' 'unsafe-inline'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 690,
        "resizable": true,
        "title": "Phi Recorder",
        "width": 900,
        "fileDropEnabled": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
